# Alsamixer Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86Calculator exec --no-startup-id galculator # Open calculator
# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86Mail exec --no-startup-id franz-bin # open Franz

# Set wallpaper
exec --no-startup-id feh --bg-fill ~/Pictures/wallpaper.png


# System menu.
set $sysmenu "system:  [r]eload  [l]ogout  [p]oweroff  re[b]oot"
bindsym $mod+Shift+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}


# Special dmenu with window, ssh and normal searches
set $searchmenu "system:  [w]indow  [s]sh  [d]normal"
bindsym $mod+Shift+d      mode $searchmenu

mode $searchmenu {
    bindsym w         exec rofi -show window
    bindsym s         exec rofi -show ssh
    bindsym d         exec rofi -show run

    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Change dmenu with rofi
bindsym $mod+d exec rofi -show run

# Zeal for documentation
bindsym $mod+z exec zeal

